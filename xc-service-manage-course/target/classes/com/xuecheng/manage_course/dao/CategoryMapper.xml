<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xuecheng.manage_course.dao.CategoryMapper">

    <resultMap id="categoryMap" type="com.xuecheng.framework.domain.course.ext.CategoryNode">
        <id column="one_id" property="value"></id>
        <result column="one_name" property="label"></result>
        <collection property="children" ofType="com.xuecheng.framework.domain.course.ext.CategoryNode">
            <id column="two_id" property="value"></id>
            <result column="two_name" property="label"></result>
            <collection property="children" ofType="com.xuecheng.framework.domain.course.ext.CategoryNode">
                <id column="three_id" property="value"></id>
                <result column="three_name" property="label"></result>
            </collection>
        </collection>

    </resultMap>

    <select id="findList" resultMap="categoryMap">
        select a.id one_id,
               a.name one_name,
               b.id two_id,
               b.name two_name,
               c.id three_id,
               c.name three_name
        from xc_course.category a
                 left join xc_course.category b on b.parentid = a.id
                 left join xc_course.category c on c.parentid = b.id
        where a.parentid = '0'
    </select>
</mapper>